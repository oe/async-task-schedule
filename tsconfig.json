{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "sourceMap": true
  },
  "include": ["src", "test"],
  "exclude": [
    "dist",
    "test",
    "rollup.config.ts",
    "coverage"
  ]
}